rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /index/{document}{
      allow read: if false;
    }
    match /users/{document}{
      // Allow any authenticated user to read user profiles (simpler for now to fix permission denied)
      allow read: if request.auth != null;
      allow write: if request.auth.uid == document;
    }
    match /teams/{document}{
      // Allow read (get/list) to authenticated users so snapshot listeners work
      allow read: if request.auth != null;
      // Allow write only if user is owner or member logic (kept strict or open as needed, keeping strict for now)
      allow write: if false; 
    }
    match /levels/{document}{
      allow read,write: if false;
    }
    match /questions/{document} {
      allow read: if true;
    }
    match /logs/{team}{
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.team == (team);
    }

  }
}